# ============================================
# PROJECT ROOT ENVIRONMENT VARIABLES
# Works for both Backend (Django) and Frontend (React)
# ============================================

# --------------------------------------------
# DJANGO BACKEND SETTINGS
# --------------------------------------------

# Django Secret Key (generate a strong one)
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production

# Django Debug Mode (True for development, False for production)
DJANGO_DEBUG=True

# Allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# SQLite for development
DATABASE_URL=sqlite:///backend/db.sqlite3

# PostgreSQL for production (uncomment when needed)
# DB_NAME=lindsay_db
# DB_USER=postgres
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True


# --------------------------------------------
# REACT FRONTEND SETTINGS
# (All frontend variables must start with VITE_)
# --------------------------------------------

# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:8000/api

# Frontend URL (for emails, redirects)
VITE_FRONTEND_URL=http://localhost:5173

# Site name
VITE_SITE_NAME=Lindsay Classics

# Whether to enable analytics
VITE_ENABLE_ANALYTICS=False


# --------------------------------------------
# API KEYS & EXTERNAL SERVICES
# --------------------------------------------

# AliExpress API (for dropshipping)
ALIEXPRESS_API_KEY=your-api-key-here
ALIEXPRESS_API_SECRET=your-api-secret-here
ALIEXPRESS_TRACKING_ID=your-tracking-id

# Payment Gateway (example with Stripe)
# STRIPE_PUBLIC_KEY=pk_test_your-key
# STRIPE_SECRET_KEY=sk_test_your-key


# --------------------------------------------
# DEPLOYMENT SETTINGS
# --------------------------------------------

# Production URLs (update these for deployment)
PRODUCTION_API_URL=https://api.lindsayclassics.com
PRODUCTION_FRONTEND_URL=https://lindsayclassics.com