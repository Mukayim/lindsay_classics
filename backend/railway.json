{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd frontend && npm install && npm run build && cd ../backend && python manage.py collectstatic --noinput"
  },
  "deploy": {
    "startCommand": "cd /app/backend && PYTHONPATH=/app/backend gunicorn backend.wsgi:application --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/health/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}